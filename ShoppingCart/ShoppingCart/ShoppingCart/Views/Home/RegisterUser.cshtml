@model ShoppingCart.Models.UserMetaClass


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>

}

<h2>Register</h2>

<p>Hello, welcome to the user registration page.</br>Please enter your details in the form below.</p>

@using(Html.BeginForm("Adduser", "Home", FormMethod.Post))
{
    <div>
        <table>
            <tr>
                <td>Username: </td>
                <!-- <td><input type = "text" name = "username" /></td> -->
                <td>@Html.TextBoxFor(modelItem => modelItem.Username)</td>
                <td>@Html.ValidationMessageFor(modelItem => modelItem.Username)</td>
            </tr>
            <tr>
                <td>Password: </td>
                <!-- <td><input type="password" name="password" /></td> -->
                <td>@Html.PasswordFor(modelItem => modelItem.Password)</td>
                <td>@Html.ValidationMessageFor(modelItem => modelItem.Password)</td>
            </tr>
            <tr>
                <td>Confirm Password: </td>
                <!-- <td><input type="password" name="confirm" /></td> -->
                <td>@Html.PasswordFor(modelItem => modelItem.ConfirmPassword)</td>
                <td>@Html.ValidationMessageFor(modelItem => modelItem.ConfirmPassword)</td>
            </tr>
            <tr>
                <td></td>
                <td><input id = "alert" type = "submit" value = "Submit"/></td>
            </tr>
        </table>
    </div>
    <br />

    if (@Session["exists"] == "true")
    {

        <div>Error, username already in use!</div>
    }
    <!-- if (@Session["match"] == "false")
    {
        <div>Error, passwords do not match!</div>
    } -->

}

